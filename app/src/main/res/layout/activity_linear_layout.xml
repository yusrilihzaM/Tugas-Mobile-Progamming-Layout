<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InflaterLayout.Adapter.Activity.InflaterLayout">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradasi"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/textView_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/banner_bg"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"
        android:text="@string/contoh_penggunaan_linear_layout"
        android:textAlignment="textStart"
        android:textColor="@color/whire"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_tv"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_tv"
        tools:context=".LinearLayout.LinearLayout">
        <Button
            android:layout_margin="3dp"
            android:id="@+id/Vertical_Linear_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vertical Linear Layout"/>
        <Button
            android:layout_margin="3dp"
            android:id="@+id/Horizontal_Linear_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horizontal Linear Layout"/>
        <Button
            android:layout_margin="3dp"
            android:id="@+id/Vertical_Linear_Layout_Equal_High"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vertical Linear Layout: Equal High"/>
        <Button
            android:layout_margin="3dp"
            android:id="@+id/Vertical_Linear_Layout_Leftover_High"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vertical Linear Layout: Leftover High"/>
        <Button
            android:layout_margin="3dp"
            android:id="@+id/Horizontal_Linear_Layout_Equal_High"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horizontal_Linear Layout: Equal High"/>
        <Button
            android:layout_margin="3dp"
            android:id="@+id/Horizontal__Linear_Layout_Leftover_High"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horizontal Linear Layout: Leftover High"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>